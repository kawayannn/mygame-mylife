= render partial: 'shared/header'
%main.group
  .group-header
    .group-header__left
      .group-header__left--group-image
        = image_tag @group.image.url
      .group-header__left--name
        = @group.title
      .group-header__left--user-length
        = fa_icon 'users'
        = "#{@group.users.length}人"
        |
        = fa_icon 'gamepad'
        - if @group.gametitles.present?
          - @group.gametitles.each do |g|
            = g.name
    - if @group.join?(current_user.id)
      #group-header__right{data: {group_id: "#{@group.id}"}}
        %button.btn.btn-success#create_message{type: "button"}
          コメントする
          = fa_icon 'comment', class: "message-icon"
    - else
      = form_for  @group, :url => {controller: "groups", action: "join", method: :update} do |f|
        #group-header__right
          - @group.users.each do |user|
            %input{name: "group[user_ids][]", type: "hidden", value: user.id}
          %input{name: "group[user_ids][]", type: "hidden", value: current_user.id}
          %input{type: "submit", class: "btn btn-success", value: "グループに参加する"}
  .messages
    - @messages.each do |message|
      .messages__message
        .messages__message--uper
          = render partial: 'shared/user', locals: { hoge: message }
          = message.created_at.strftime("%Y/%m/%d %H:%M")
        .messages__message--main
          = message.content
        .messages__message--lower
          


